# Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Application Environment
NODE_ENV=development
APP_NAME=Nixbit
APP_VERSION=0.1.0

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/nixbit
POSTGRES_DB=nixbit
POSTGRES_USER=nixbit
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=your_very_secure_jwt_secret_key_here_at_least_32_characters
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
BACKEND_PORT=3001
FRONTEND_PORT=3000
ADMIN_PORT=3002
NGINX_PORT=80
NGINX_SSL_PORT=443

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3002,http://localhost:5173

# Frontend Environment Variables
REACT_APP_API_URL=http://localhost:3001
REACT_APP_ENVIRONMENT=development
REACT_APP_VERSION=0.1.0

# GitHub Integration
GITHUB_APP_ID=
GITHUB_APP_PRIVATE_KEY=
GITHUB_WEBHOOK_SECRET=

# GitLab Integration
GITLAB_TOKEN=
GITLAB_WEBHOOK_SECRET=

# Jenkins Integration
JENKINS_URL=
JENKINS_USERNAME=
JENKINS_API_TOKEN=

# Email Configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@localhost

# Monitoring and Logging
LOG_LEVEL=info
SENTRY_DSN=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Frontend Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=false
ENABLE_SLACK_INTEGRATION=false
ENABLE_STRIPE_BILLING=true

# CAPTCHA Configuration (hCaptcha)
HCAPTCHA_SITE_KEY=your_hcaptcha_site_key_here
HCAPTCHA_SECRET_KEY=your_hcaptcha_secret_key_here
VITE_HCAPTCHA_SITE_KEY=your_hcaptcha_site_key_here