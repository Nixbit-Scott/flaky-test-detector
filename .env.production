# Production Environment Configuration
NODE_ENV=production
APP_NAME=Nixbit
APP_VERSION=0.1.0

# Database Configuration
DATABASE_URL=postgresql://nixbit_prod:prod_password@prod-db:5432/nixbit_prod
POSTGRES_DB=nixbit_prod
POSTGRES_USER=nixbit_prod
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PRODUCTION_PASSWORD
POSTGRES_PORT=5432

# Redis Configuration
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD@prod-redis:6379
REDIS_PASSWORD=CHANGE_ME_SECURE_REDIS_PASSWORD
REDIS_PORT=6379

# JWT Configuration
JWT_SECRET=CHANGE_ME_SUPER_SECURE_JWT_SECRET_MINIMUM_32_CHARACTERS_LONG
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
BACKEND_PORT=3001
FRONTEND_PORT=3000
ADMIN_PORT=3002
NGINX_PORT=80
NGINX_SSL_PORT=443

# CORS Configuration
CORS_ORIGIN=https://nixbit.com,https://admin.nixbit.com

# Frontend Environment Variables
REACT_APP_API_URL=https://api.nixbit.com
REACT_APP_ENVIRONMENT=production
REACT_APP_VERSION=0.1.0

# GitHub Integration
GITHUB_APP_ID=CHANGE_ME_PRODUCTION_GITHUB_APP_ID
GITHUB_APP_PRIVATE_KEY=CHANGE_ME_PRODUCTION_GITHUB_PRIVATE_KEY
GITHUB_WEBHOOK_SECRET=CHANGE_ME_PRODUCTION_WEBHOOK_SECRET

# GitLab Integration
GITLAB_TOKEN=CHANGE_ME_PRODUCTION_GITLAB_TOKEN
GITLAB_WEBHOOK_SECRET=CHANGE_ME_PRODUCTION_GITLAB_WEBHOOK_SECRET

# Jenkins Integration
JENKINS_URL=https://jenkins.yourcompany.com
JENKINS_USERNAME=CHANGE_ME_PRODUCTION_JENKINS_USER
JENKINS_API_TOKEN=CHANGE_ME_PRODUCTION_JENKINS_TOKEN

# Email Configuration
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=apikey
SMTP_PASS=CHANGE_ME_SENDGRID_API_KEY
FROM_EMAIL=noreply@nixbit.com

# Monitoring and Logging
LOG_LEVEL=warn
SENTRY_DSN=CHANGE_ME_PRODUCTION_SENTRY_DSN

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/nixbit.com.crt
SSL_KEY_PATH=/etc/ssl/private/nixbit.com.key

# Cloud Storage (AWS S3)
AWS_ACCESS_KEY_ID=CHANGE_ME_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_ME_AWS_SECRET_KEY
AWS_REGION=us-east-1
S3_BUCKET_NAME=nixbit-production-assets

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_WEBHOOKS=true
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SLACK_INTEGRATION=true

# Subscription/Billing (Stripe)
STRIPE_SECRET_KEY=CHANGE_ME_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=CHANGE_ME_STRIPE_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=CHANGE_ME_STRIPE_PUBLISHABLE_KEY